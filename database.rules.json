{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "PLTMH": {
      ".read": "auth != null",  
      ".write": "auth != null"
    },
    "history": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$timestamp": {
        ".validate": "newData.hasChildren(['voltage', 'current', 'power', 'rpm', 'timestamp'])"
      }
    },
    "Devices": {
      ".read": true,
      ".write": "auth != null"
    },
    "News": {
      ".read": true,
      ".write": "auth != null"
    }
  }
}